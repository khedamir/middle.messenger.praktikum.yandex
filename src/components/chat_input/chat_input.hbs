<div class="chat-input">
  <span class="chat-input__addfile">
    <input id="chat-input__file" type="file" name="message" />
    <label for="chat-input__file">
      <img src="./svg/clip-icon.svg" alt="add-file" />
    </label>
  </span>
  <div class="chat-input__message">
    <input type="text" placeholder="Message" name="message" />
  </div>
  <div class="chat-input__send">
    <img src="./svg/send-icon.svg" alt="send-message" />
  </div>
</div>
