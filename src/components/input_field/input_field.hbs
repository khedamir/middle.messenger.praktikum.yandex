<div class='input input__{{error}}'>
  <label class='input__container'>
    {{!-- <input
      class='input__element'
      placeholder=''
      value='{{value}}'
      name='{{name}}'
    /> --}}
    {{{Input
      name=name
      ref='input'
      placeholder=''
      name=name
      classes='input__element'
      onBlur=onBlur
    }}}
    <div class='input__label'>{{label}}</div>
    {{#if error_message}}
      {{{ErrorLine error_message=error_message ref='errorLine'}}}
    {{/if}}
  </label>
</div>