<div class="input input__{{error}}">
  <label class="input__container">
    <input class="input__element" placeholder="" value="{{value}}" />
    <div class="input__label">{{label}}</div>
    {{#if error_message}}
      <div class="input__text-error">{{error_message}}</div>
    {{/if}}
  </label>
</div>
