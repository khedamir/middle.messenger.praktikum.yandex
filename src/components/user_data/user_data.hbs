{{#> DataLayout}}
  <div class="user-data__img">
    <input id="user-image-input" type="file" name="avatar">
    {{#if image}}
    <img src="user-image" alt="user-image">
    {{else}}
    <div class="user-image__empty">
        <img src="./svg/user-icon.svg" alt="user-empty-image">
    </div>
    {{/if}}
    <label for="user-image-input"><img class="user-image__change" src="./svg/pen-icon.svg" alt="change-image"></label>
  </div>
  <div class="user-data__form">
    <form action="">
      {{> Input label='Name' name='first_name' }}
      {{> Input label='Surname' name='second_name' }}
      {{> Input label='Phone' name='phone' }}
      {{> Input label='Email' name='email' }}
      {{> Input label='Login' name='login' }}
      {{> Input label='Display name' name='display_name' }}
      {{> Button label='Save' type='green' page='error' }}
    </form>
  </div>
  <div class="settings">
    <button class="settings-change-password" page="password">Change password</button>
    <button class="settings-logout" page="login">Logout</button>
  </div>
{{/DataLayout}}