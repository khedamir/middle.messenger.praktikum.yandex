{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["@prettier/plugin-handlebars"],
  "overrides": [
    {
      "files": ["*.hbs"],
      "options": {
        "parser": "glimmer"
      }
    }
  ]
}
